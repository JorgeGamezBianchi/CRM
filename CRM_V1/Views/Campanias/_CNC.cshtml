                                    <label>Fecha Nacimiento:</label>
                                    <input type="date" class="form-control" id="FechaNacCNC" onchange="ValidaFechaNacCNC()" />
                                    @*<button id="validarFecha" onclick="ValidaFechaNac()">Validar</button>*@
                                    <label id="lblFechaCNC" style="color:orangered"></label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="Password">Status sale:</label>
                                    <select class="form-control" id="StatusSaleCnc" onchange="EstatusVenta()"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label>Calificacion:</label>
                                    <select class="form-control" id="cmbCNCCalif"></select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="ValidateCnc" data-dismiss="modal">Continuar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

