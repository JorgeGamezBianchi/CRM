
@Styles.Render("~/Content/Site.css")
@Scripts.Render("~/Scripts/Campanias/Hipotecario.js")
@Scripts.Render("~/Scripts/jquery-ui.js")
<div class="panel panel-primary" id="HIPOTECARIO">
    <div class="panel-heading" id="HeadingHIPO" name="GB">
        <div class="panel-title">
            &nbsp;
            <div class="pull-left">
                HIPOTECARIO
                @*<button class="boton-guardar" id="OpenScriptHIPO" title="Abrir script de HIPO" hidden="hidden" >
                        <span class="glyphicon glyphicon-open-file" style="color: white" hidden="hidden"></span>
                    </button>*@
            </div>
            <div class="pull-right">
                <h4 class="panel-title">
                    <span style="color: white" id="EstadoHIPO" name="GrupoB"></span>
                    &nbsp;
                    <label id="lblHipo"> ES VENTA? :</label>
                    <input type="checkbox" id="check_hipo" onchange="check_val_hipo()" />

                    <label id="CalificadoHipo" hidden>
                        <span class="glyphicon glyphicon-ok" style="color: white" title="Calificado"></span>
                    </label>
                    <button class="boton-guardar" id="SaveCalifHipo">
                        <span class="glyphicon glyphicon-list-alt" style="color: white" title="Calificar"></span>
                    </button>
                    <button class="boton-guardar" id="ValidarHIPO" data-toggle="modal" data-target="#modalHIPO" hidden>
                        <span class="glyphicon glyphicon-ok" style="color: white" title="Validar"></span>
                    </button>
                    <button class="boton-guardar" id="SaveHIPO">
                        <span class="glyphicon glyphicon-floppy-disk btn-primary-outlinee" style="color: white" title="Guardar"></span>
                    </button>
                    <a data-toggle="collapse" href="#collapseH" class="pull-right" data-parent="#acordion">
                        <span class="glyphicon glyphicon-chevron-up" id="iconTwo"></span>
                    </a>
                </h4>
            </div>
        </div>
    </div>

    <div id="collapseH" class="collapse panel-collapse">
        <form action="/" method="post">

            <div class="panel-body" id="panelCalificacionHipo">
                <div class="row" id="comboCalif">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Seleccione calificacion:</label>
                                <select class="form-control" id="comboHipoCalif"></select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel-body" id="panelHipo" hidden>
                <input type="hidden" id="IdCampana" />

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Folio:</label>
                                <input type="text" placeholder="Folio" class="form-control input-number" disabled id="FolioHIPO" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Tipo:</label>
                                <input type="text" placeholder="Tipo" class="form-control input-number" id="TipoHIPO" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Monto:</label>
                                <input type="text" placeholder="Monto" class="form-control" id="MontoPromesaHIPO" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3" hidden>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Tasa:</label>
                                <input type="text" placeholder="Tasa" class="form-control" id="TasaHIPO" disabled />
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-3" hidden>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">CAT:</label>
                                <input type="text" placeholder="CAT" class="form-control" id="CATHIPO" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3" id="visitaSucursalHIPO">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Fecha visita sucursal:</label>
                                <input type="text" placeholder="Fecha vicita sucursal" class="form-control" id="FechaVisitaSucursalHIPO" readonly onkeypress="return (event.charCode >= 48 && event.charCode <= 57 && event.charCode >= 65 && event.charCode <= 90 && event.charCode >= 97 && event.charCode <= 122 )" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3" id="divEstadoHIPO">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Seleccione estado:</label>
                                <select class="form-control" id="EstadoSucursalSelectHIPO"></select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3" id="divMunicipioHIPO">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Seleccione municipio:</label>
                                <select class="form-control" id="MunicipioSucursalSelectHIPO"></select>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row" id="divSucursal2HIPO">
                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Sucursal:</label>
                                <input type="text" placeholder="Sucursal" class="form-control" id="SucursalHIPO" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Número sucursal:</label>
                                <div class="input-group">
                                    <input type="text" placeholder="Número sucursal" class="form-control" id="NumeroSucursalHIPO" readonly />
                                    <span class="input-group-btn">
                                        <button class="btn btn-info" type="button" id="DetalleSucursalHIPO">
                                            <span class="glyphicon glyphicon-zoom-in"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">División:</label>
                                <input type="text" placeholder="División" class="form-control" id="DivisionHIPO" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label class="control-label">Regional:</label>
                                <input type="text" placeholder="Regional" class="form-control" id="RegionalHIPO" readonly />
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="modalHIPO" tabindex="-1" role="dialog" aria-labelledby="myModalLabelHIPO" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Ingresar como validador</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="UserName">User name:</label>
                                    <input type="text" class="form-control" id="UserHIPO" placeholder="Enter your user name" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="Password">Password:</label>
                                    <input type="password" class="form-control" id="PasswordHIPO" placeholder="Enter your user password" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label for="Password">Status sale:</label>
                                    <select class="form-control" id="StatusSaleHIPO"></select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" id="ValidateHIPO" data-dismiss="modal">Continuar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModalSucursalesHipo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog modal-lg">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h3 class="modal-title">Seleccione una sucursal</h3>
            </div>

            <div class="modal-body modal-body1">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-responsive">
                            <thead class="btn-primary">
                                <tr id="headerTableSucursalHipo">
                                    <th class="small">SIRH</th>
                                    <th class="small">NOMBRE DISP</th>
                                    <th class="small">DIVISION</th>
                                    <th class="small">DIRECCION</th>
                                    <th class="small">DOMICILIO</th>
                                    <th class="small">COLONIA</th>
                                    <th class="small">CALLE 1</th>
                                    <th class="small">CALLE 2</th>
                                    <th class="small">DELEG_MUNIC</th>
                                    <th class="small">LUN - VIE AP</th>
                                    <th class="small">LUN - VIE CIE</th>
                                </tr>
                            </thead>
                            <tbody id="bodyTableSucHipo"></tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>

</div>